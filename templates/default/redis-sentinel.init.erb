#!/bin/sh
#
# chkconfig: 345 99 1
# Description: Redis sentinel
# Provides: redis-sentinel
# Default-Start: 3 4 5
# Default-Stop: 0 1 2 6
# Simple Redis sentinel init.d script conceived to work on Linux systems
# as it does use the /proc filesystem.
REDISPORT="<%= @port %>"
<% if node.redis.install_type == "package" %>
<% case node.platform_family %>
<% when "rhel", "fedora" %>
EXEC=/usr/sbin/redis-server
<% when "debian" %>
EXEC=/usr/bin/redis-server
<% end %>
CLIEXEC=/usr/bin/redis-cli
<% else %>
EXEC=<%= node.redis.dst_dir %>/bin/redis-server
CLIEXEC=<%= node.redis.dst_dir %>/bin/redis-cli
<% end %>

PIDFILE=<%= @pidfile  %>
CONF="<%= @conf_dir %>/sentinel-<%= @name %>.conf"

case "$1" in
    start)
        if [ -f $PIDFILE ]
        then
                echo "$PIDFILE exists, process is already running or crashed"
        else
                echo "Starting Redis sentinel..."
		touch $PIDFILE
                $EXEC $CONF --sentinel
        fi
        ;;
    stop)
        if [ ! -f $PIDFILE ]
        then
                echo "$PIDFILE does not exist, process is not running"
        else
                PID=$(cat $PIDFILE)
                echo "Stopping ..."
                kill $PID
                while [ -x /proc/${PID} ]
                do
                    echo "Waiting for Redis sentinel to shutdown ..."
                    sleep 1
                done
                echo "Redis sentinel stopped"
        fi
        ;;
    *)
        echo "Please use start or stop as first argument"
        ;;
esac
